# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
   desc “Sync signing”
    lane :sync_certificates do
    match({readonly: false, type: "adhock"})
    update_code_signing_settings()
    end


   desc "Load ASC API Key information to use in subsequent lanes"
   lane :load_asc_api_key do
     app_store_connect_api_key(
       key_id: "M9TJ4K9P8Y",
       issuer_id: "69a6de73-f7c5-47e3-e053-5b8c7c11a4d1",
       key_filepath: "./fastlane/AuthKey_M9TJ4K9P8Y.p8",
       in_house: false # detecting this via ASC private key not currently supported
     )
   end
    desc " Build My App"
    lane :build_ipa do
      sync_certificates
      gym(
        workspace: "rentachef.xcworkspace",
        scheme: "rentachef",
        output_directory: "fastlane/builds",
        output_name: "rentachef.ipa",
        include_bitcode: false,
        clean: true,
        export_options: {
           method: "app-store",
           provisioningProfiles: {
           "com.raclabs.rentachef" => "match Development com.raclabs.rentachef",
              }
        }
      )
      end

  lane :release_rentachef_to_testflight do
    # Build your app
    load_asc_api_key
    increment_build_number
    build_ipa
  end
end




