# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
 desc "Installs signing certificate in the keychain and downloads provisioning profiles from App Store Connect"
 lane :sync_certificates do |options|
   team_id = CredentialsManager::AppfileConfig.try_fetch_value(:team_id)
   api_key = lane_context[SharedValues::APP_STORE_CONNECT_API_KEY]

   keychain_name = "signing"
   keychain_password = "temp"

   delete_keychain(
     name: keychain_name
   ) if File.exist? File.expand_path("~/Library/Keychains/#{keychain_name}-db")

   create_keychain(
     name: keychain_name,
     password: keychain_password,
     default_keychain: true,
     unlock: true,
     timeout: 3600
   )

   import_certificate(
     certificate_path: "/Users/distiller/rentachef-react-native/.circleci/certs/certificate.p12",
     certificate_password: "rac2023",
     keychain_name: keychain_name,
     keychain_password: keychain_password
   )

   # fetches and installs provisioning profiles from ASC
    sync_code_signing 
     mapping = Actions.lane_context[
     SharedValues::MATCH_PROVISIONING_PROFILE_MAPPING
     ]
    #read-only disables match from overriding the existing certificates.
    match({readonly: true, type: "appstore"})
 end


   desc "Load ASC API Key information to use in subsequent lanes"
   lane :load_asc_api_key do
     app_store_connect_api_key(
       key_id: "M9TJ4K9P8Y",
       issuer_id: "69a6de73-f7c5-47e3-e053-5b8c7c11a4d1",
       key_filepath: "./fastlane/AuthKey_M9TJ4K9P8Y.p8",
       in_house: false # detecting this via ASC private key not currently supported
     )
   end
    desc " Build My App"
    lane :build_ipa do
    install_provisioning_profile(path: "/Users/distiller/rentachef-react-native/.circleci/profiles/RAC_Labs_Rentachef.mobileprovision") 
      gym(
        workspace: "rentachef.xcworkspace",
        scheme: "rentachef",
        output_directory: "fastlane/builds",
        output_name: "rentachef.ipa",
        include_bitcode: false,
        clean: true,
        export_options: {
           method: "app-store",

        }
      )
      end

  lane :release_rentachef_to_testflight do
    # Build your app
    load_asc_api_key
    sync_certificates
    increment_build_number
    build_ipa
  end
end




