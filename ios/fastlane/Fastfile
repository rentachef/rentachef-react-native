default_platform(:ios)

platform :ios do
  desc "Install Profiles and Build My App"
  lane :build_ipa do
    install_provisioning_profile(path: "/Users/distiller/rentachef-react-native/circleci/profiles/RAC_Labs_Rentachef.mobileprovision") # This will install provision profiles at run time if needed when you run the fastlane lane
    gym(
      workspace: "rentachef.xcworkspace",
      scheme: "rentachef",
      output_directory: "/Users/distiller/rentachef-react-native",
      output_name: "renta.ipa",
      clean: true)
    
    end
    lane: release_rentachef_to_testflight do

      # Build your app
      build_ipa
    end
  end




